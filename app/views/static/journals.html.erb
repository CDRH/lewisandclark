<!-- does not need specific row and col offset -->
<div class="row">
  <div class="col-md-3">
    <div class="list-group">
      <%= link_to contents_path, {:class=>"list-group-item active list-group-item-primary"} do %>
        <h4 class="list-group-item-heading">Table of Contents</h4>
        <p class="list-group-item-text">Explore the Journals</p>
      <% end %>
      <%= link_to index_path, {:class=>"list-group-item active list-group-item-info"} do %>
        <h4 class="list-group-item-heading">Browse by Index</h4>
        <p class="list-group-item-text">Normalized Name Entities</p>
      <% end %>
      <%= link_to calendar_path, {:class=>"list-group-item active list-group-item-primary"} do %>
        <h4 class="list-group-item-heading">Browse by Date</h4>
        <p class="list-group-item-text">Calendar View</p>
      <% end %>
      <%= link_to map_path, {:class=>"list-group-item active list-group-item-info"} do %>
        <h4 class="list-group-item-heading">Browse by Map</h4>
        <p class="list-group-item-text">(Forthcoming)</p>
      <% end %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Search the Journals</h3>
      </div>
      <div class="panel-body">
        Removed
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="list-group">
      <%= link_to j_about_path, {:class=>"list-group-item active list-group-item-info"} do %>
      <h4 class="list-group-item-heading">About the Journals</h4>
      <p class="list-group-item-text">Members, prefaces, introductions, etc. </p>
      <% end %>
    </div>
    <a href="http://www.nebraskapress.unl.edu/Catalog/ProductSearch.aspx?filter=&search=&cid=0&sort=Name&itemsperpage=10&view=List&currentpage=&pf=&sf=&sj=283" class="buy_books_link">
      <div class="buy_books">
        <h4>Buy the Print Editions</h4>
        <p>Print editions of The Journals of the Lewis &amp; Clark Expedition are available through the University of Nebraska Press</p>
      </div>
    </a>
  </div>
</div><!-- /row -->
